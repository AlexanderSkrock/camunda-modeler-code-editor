{
    "targets": {
        "lint": {
            "lintFilePatterns": ["{projectRoot}/client/**/*.js", "{projectRoot}/vendor/**/*.js"]
        },
        "dev": {
            "options": {
                "main": "./client/index.js",
                "outputPath": "./dist",
                "outputFileName": "client.js",
                "supportsStyles": true,
                "configureJsxRuntimeAlias": true
            }
        },
        "build": {
            "options": {
                "main": "./client/index.js",
                "outputPath": "./dist",
                "outputFileName": "client.js",
                "supportsStyles": true,
                "configureJsxRuntimeAlias": true
            }
        },
        "pack-plugin": {
            "options": {
                "args": [
                    "--source {projectRoot}",
                    "--destination {projectRoot}/packs"
                ]
            },
            "outputs": [
                "{projectRoot}/packs"
            ]
        }
    }
}