{
  "targetDefaults": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "eslintConfig": "{workspaceRoot}/eslint.config.mjs",
        "lintFilePatterns": [
          "{projectRoot}/lib/**/*.js",
          "{projectRoot}/client/**/*.js"
        ]
      }
    },
    "dev": {
      "dependsOn": [],
      "executor": "@nx/esbuild:esbuild",
      "cache": true,
      "options": {
        "esbuildConfig": "{workspaceRoot}/esbuild.config.js",
        "tsConfig": "{workspaceRoot}/tsconfig.json",
        "sourcemap": "inline",
        "watch": true 
      },
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "executor": "@nx/esbuild:esbuild",
      "cache": true,
      "options": {
        "esbuildConfig": "{workspaceRoot}/esbuild.config.js",
        "tsConfig": "{workspaceRoot}/tsconfig.json",
        "sourcemap": "linked",
        "minify": true
      },
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "{workspaceRoot}/jest.config.js",
        "passWithNoTests": true
    }
    },
    "pack-plugin": {
      "dependsOn": [
        "build"
      ],
      "executor": "nx:run-commands",
      "options": {
          "cwd": "{workspaceRoot}",
          "command": "node ./scripts/pack-plugin.js",
          "args": [
            "--source {projectRoot}",
            "--destination {projectRoot}/packs"
          ]
      },
      "outputs": [
        "{projectRoot}/packs"
      ]
    },
    "provision": {
      "executor": "nx:run-commands",
      "options": {
          "cwd": "{projectRoot}",
          "command": "npx camunda-modeler-provisioner install --overwrite"
      },
      "outputs": []
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
          "cwd": "{projectRoot}",
          "command": "npx camunda-modeler-provisioner launch"
      },
      "outputs": []
    }
  },
  "release": {
    "projects": [
      "packages/*"
    ],
    "releaseTagPattern": "v{version}",
    "version": {
      "git": {
        "commitMessage": "chore: version and release v{version}",
        "commit": true,
        "tag": true
      }
    }
  },
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "nxCloudId": "67feef2e449353331a1c6d60"
}
