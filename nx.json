{
  "targetDefaults": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "eslintConfig": "{workspaceRoot}/eslint.config.mjs",
        "lintFilePatterns": [
          "{projectRoot}/lib/**/*.js",
          "{projectRoot}/client/**/*.js"
        ]
      }
    },
    "dev": {
      "dependsOn": [
        "^dev"
      ],
      "executor": "@nx/webpack:webpack",
      "cache": true,
      "options": {
        "webpackConfig": "{workspaceRoot}/webpack.config.js",
        "mode": "development"
      },
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "executor": "@nx/webpack:webpack",
      "cache": true,
      "options": {
        "webpackConfig": "{workspaceRoot}/webpack.config.js",
        "mode": "production"
      },
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "pack-plugin": {
      "dependsOn": [
        "build"
      ],
      "executor": "nx:run-commands",
      "options": {
          "cwd": "{workspaceRoot}",
          "command": "node ./scripts/pack-plugin.js",
          "args": [
            "--source {projectRoot}",
            "--destination {projectRoot}/packs"
          ]
      },
      "outputs": [
        "{projectRoot}/packs"
      ]
    }
  },
  "release": {
    "projects": [
      "packages/*"
    ],
    "releaseTagPattern": "v{version}",
    "git": {
      "commitMessage": "chore: version and release v{version}",
      "commit": true,
      "tag": true,
      "push": true
    }
  },
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "nxCloudId": "67feef2e449353331a1c6d60"
}
