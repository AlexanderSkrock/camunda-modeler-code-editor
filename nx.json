{
  "targetDefaults": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "eslintConfig": "{projectRoot}/eslint.config.mjs",
        "lintFilePatterns": ["{projectRoot}/lib/**/*.js", "{projectRoot}/client/**/*.js"]
      }
    },
    "dev": {
      "dependsOn": ["^dev"],
      "executor": "@nx/webpack:webpack",
      "options": {
        "webpackConfig": "{projectRoot}/webpack.dev.mjs"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "build": {
      "dependsOn": ["^build"],
      "executor": "@nx/webpack:webpack",
      "options": {
        "webpackConfig": "{projectRoot}/webpack.prod.mjs"
      },
      "outputs": ["{projectRoot}/dist"]
    }
  }
}